%section.section.title-page
  .container
    .row
      .col-md-6
        %h3.page-title Login
      .col-md-6
        %ol.breadcrumb.pull-right
          %li
            %a{:href => "#"} Home
          %li
            %a{:href => "#"} Pages
          %li
            %a{:href => "#"} Pricing Tables
%section.section.panel.panel-default
  .container.panel-body
    .row
      .col-md-4.col-md-offset-4
        .panel.panel-default
          .panel-heading
            %h3.panel-title Please sign in
          .panel-body
            %form{"accept-charset" => "UTF-8", :role => "form"}
              %fieldset
                .form-group
                  %input.form-control{:name => "email", :placeholder => "E-mail", :type => "text"}/
                .form-group
                  %input.form-control{:name => "password", :placeholder => "Password", :type => "password", :value => ""}/
                .checkbox
                  %label
                    %input{:name => "remember", :type => "checkbox", :value => "Remember Me"}>/
                    Remember Me
                %input.btn.btn-lg.btn-inverse.btn-block{:type => "submit", :value => "Login"}/
