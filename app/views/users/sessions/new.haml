%section.section.title-page
  .container
    .row
      .col-md-6
        %h3.page-title
          = t(:login)
      .col-md-6
        %ol.breadcrumb.pull-right
          %li
            = link_to root_path do
              = t(:home)
          %li
            = link_to root_path do
              = t(:login)
%section.section.panel.panel-default
  .container.panel-body
    .row
      .col-md-4.col-md-offset-4
        .panel.panel-default
          .panel-heading
            %h3.panel-title
              = t(:please_sign_in)
          .panel-body
            = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
              %ul
                - resource.errors.full_messages.each do |e|
                  %li
                    = e
              %fieldset
                .form-group
                  = f.input :email, label: false, input_html: { class: 'form-control', placeholder: "Email" }
                .form-group
                  = f.input :password, label: false, input_html: { class: 'form-control', placeholder: "Password" }
                .checkbox
                  %label
                    %input{:name => "remember", :type => "checkbox", :value => "Remember Me"}>
                    Remember Me
                = f.button :submit, "Login", :class => 'btn btn-lg btn-inverse btn-block'
                = link_to 'Forgot Password', new_password_path(resource_name), class: 'btn btn-lg btn-inverse btn-block'
                = link_to 'Sign Up', new_user_registration_path, class: 'btn btn-lg btn-inverse btn-block'

