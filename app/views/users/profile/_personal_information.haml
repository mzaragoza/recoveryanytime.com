#personal_information.tab-pane.active
  .inner-padding
    .client-block
      .avatar
        %img{alt: "", src: "/assets/images/users/user-4.jpg"}/

      %ul.client-block-list
        %li
          - if user == current_user
            .dropdown
              %a.btn.btn-default.dropdown-toggle.btn-sm{"data-toggle" => "dropdown", href: "#"}
                %i.fa.fa-cog
                %i.fa.fa-caret-down
              %ul.dropdown-menu.pull-right.ext-dropdown-icons-right{role: "menu"}
                %li
                  = link_to edit_users_profile_path(user) do 
                    %i.fa.fa-edit
                    Edit
        %li
          %span.text-muted 
            Username 
          = user.username 
        %li
          %span.text-muted 
            Email 
          = user.email 
        %li
          %span.text-muted 
            Name 
          = user.name 
        %li
          %span.text-muted 
            Gender 
          = user.gender.titleize
        %li
          %span.text-muted 
            Address 
          = user.full_address
        -#%li
          %span.text-muted 
            Recovery Type 
          = user.recovery_type.titleize
        %li
          %span.text-muted 
            Phone 
          = number_to_phone(user.phone)
        %li
          %span.text-muted 
            Sober Date 
          = user.sober_date 
        %li
          %span.text-muted 
            Birthday 
          = user.birthday 
