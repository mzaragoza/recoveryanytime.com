#newsletters.tab-pane
  .inner-padding
    .client-block
      %ul.client-block-list
        %li
          .alert.alert-success
            %i.fa.fa-check-circle
            You are subscribed to items in green 
        %li
          - if user == current_user
            .dropdown
              %a.btn.btn-default.dropdown-toggle.btn-sm{"data-toggle" => "dropdown", href: "#"}
                %i.fa.fa-cog
                %i.fa.fa-caret-down
              %ul.dropdown-menu.pull-right.ext-dropdown-icons-right{role: "menu"}
                %li
                  = link_to edit_users_email_campaing_user_path(user) do 
                    %i.fa.fa-edit
                    Edit
        - email_campaings.each do |ec|
          - list = Gibbon::API.lists.list({:filters => {:list_name => "#{ec.name}"}})
          - if list['data'] != []
            - if ec.email_campaing_users.where(:user_id => current_user).last.opt_in 
              %strong.text-success
                %li= ec.name 
            - else
              %span.text-muted 
                %li= ec.name 
      
