#fellowships.tab-pane
  .inner-padding
    .client-block
      .avatar
        - unless user.photo_url.to_s.empty?
          = image_tag user.photo_url
        - else
          %img{alt: "", src: "/assets/images/users/missing_user.png"}/
      %ul.client-block-list
        %li
          .alert.alert-success
            %i.fa.fa-check-circle
            You are subscribed to items in green 
        %li
          - if user == current_user
            .dropdown
              %a.btn.btn-default.dropdown-toggle.btn-sm{"data-toggle" => "dropdown", href: "#"}
                %i.fa.fa-cog
                %i.fa.fa-caret-down
              %ul.dropdown-menu.pull-right.ext-dropdown-icons-right{role: "menu"}
                %li
                  = link_to edit_users_fellowship_user_path(user) do 
                    %i.fa.fa-edit
                    Edit
        - user.fellowship_users.each do |f|
          %li
            - if f.opt_in
              %strong.text-success= f.fellowship.name
            - else
              %span.text-muted= f.fellowship.name
