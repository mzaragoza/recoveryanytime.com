.powerwizard-content
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    %ul
      - resource.errors.full_messages.each do |e|
        %li=e
    = f.input :username   , label: false, input_html: { class: 'form-control input-lg', placeholder: "Username"   , value: "#{ params[:user][:username] if params[:user] }"   }
    %br
    = f.input :email      , label: false, input_html: { class: 'form-control input-lg', placeholder: "Email"      , value: "#{ params[:user][:email]    if params[:user] }"   }
    %br
    = f.input :password   , label: false, input_html: { class: 'form-control input-lg', placeholder: "Password"   , value: "#{ params[:user][:password] if params[:user] }"   }
    %br
    = f.input :first_name , label: false, input_html: { class: 'form-control input-lg', placeholder: "First Name" }
    %br
    = f.input :last_name  , label: false, input_html: { class: 'form-control input-lg', placeholder: "Last Name"  }
    %br
    = f.input :gender     , label: false, input_html: { class: 'form-control input-lg', placeholder: "Gender"     }, :as => :select, :collection => gender_list, include_blank: true
    %br
    = f.input :address    , label: false, input_html: { class: 'form-control input-lg', placeholder: "Address"    }
    %br
    = f.input :city       , label: false, input_html: { class: 'form-control input-lg', placeholder: "City"       }
    %br
    = f.input :state      , label: false, input_html: { class: 'form-control input-lg', placeholder: "State"      }, :as => :select, :collection => us_states, include_blank: true
    %br
    = f.input :zip        , label: false, input_html: { class: 'form-control input-lg', placeholder: "Zipcode"    }
    %br
    = f.input :phone      , label: false, input_html: { class: 'form-control input-lg', placeholder: "Phone"      }
    Birthday
    #birthday.input-group.date
      = f.input :birthday , label: false, input_html:   { class: 'form-control input-lg datepicker'             }, :as => :string
      %span.input-group-addon
        %span.glyphicon.glyphicon-calendar
    Sober Date
    #sober_date.input-group.date
      = f.input :sober_date , label: false, input_html: { class: 'form-control input-lg datepicker'             }, :as => :string
      %span.input-group-addon
        %span.glyphicon.glyphicon-calendar
    %br
    = f.button :submit, "Join", :class => 'btn btn-primary btn-block'
    = link_to 'Already a member', new_user_session_path, class: 'btn btn-mini btn-default'
