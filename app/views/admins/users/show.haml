.client-block
  .avatar
    - unless user.photo_url.to_s.empty?
      = image_tag user.photo
  %ul.client-block-list
    %li
      -if user.active
        %span.label.label-success
          Active
      - else
        %span.label.label-danger
          Banned
      %h3= user.username 
      .dropdown
        %a.btn.btn-default.dropdown-toggle.btn-sm{"data-toggle" => "dropdown", href: "#"}
          %i.fa.fa-cog
          %i.fa.fa-caret-down
        %ul.dropdown-menu.pull-right.ext-dropdown-icons-right{role: "menu"}
          %li
            = link_to edit_admins_user_path(user) do 
              %i.fa.fa-edit
              Edit
          %li
            = link_to admins_users_banned_path(user) do
              %i.fa.fa-trash-o
              Banned
      / End .dropdown
%br
.clearfix
= raw '&nbsp;'
.clearfix
.col-md-12
  %ul.ext-tabs
    %li.active
      %a{href: "#personal_information"} Personal Information
    %li
      %a{href: "#fellowships"} Fellowships
    %li
      %a{href: "#newsletters"} Newsletters
  / End .ext-tabs
  .tab-content.ext-tabs-boxed
    = render 'personal_information'
    = render 'fellowships'
    = render 'newsletters'
