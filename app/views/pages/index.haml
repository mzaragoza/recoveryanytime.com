%section#banner.section-featured
  #carousel-example-generic.carousel.slide{"data-ride" => "carousel"}
    / Indicators
    %ol.carousel-indicators
      %li.active{"data-slide-to" => "0", "data-target" => "#carousel-example-generic"}
      %li{"data-slide-to" => "1", "data-target" => "#carousel-example-generic"}
      %li{"data-slide-to" => "2", "data-target" => "#carousel-example-generic"}
    / Wrapper for slides
    .carousel-inner
      .item.active
        .row.header-text
          .col-md-6.col-md-offset-3
            .text-center
              %i.fa.fa.fa-thumbs-up.fa-5x
              %h2.slogan
                Recovery Anytime is ....
              %p
                Whether you're sober, clean, or seeking help with your drug addiction or alcoholism, we welcome you, and will connect you with other people who share YOUR addiction, in YOUR local area, and all across the world!
      .item
        = image_tag 'group.jpg', alt: 'Second Slide'
        / Static Header
        .hidden-xs
          .col-md-12.text-center
            %h2
              %span Welcome to LOREM IPSUM
            %br/
            %h3
              %span Lorem ipsum dolor sit amet, consectetur adipiscing elit.
        / /header-text
      .item
        = image_tag 'gallery/beach_1200(1024x768).jpg', alt: 'Third Slide'
        / Static Header
        .hidden-xs
          .col-md-12.text-center
            %h2
              %span Welcome to LOREM IPSUM
            %br/
            %h3
              %span Lorem ipsum dolor sit amet, consectetur adipiscing elit.
        / /header-text
    / Controls
    %a.right.carousel-control{"data-slide" => "prev", :href => "#carousel-example-generic"}
      %span.fa.fa-chevron-left
    %a.left.carousel-control{"data-slide" => "next", :href => "#carousel-example-generic"}
      %span.fa.fa-chevron-right
  / /carousel
