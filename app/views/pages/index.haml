%section#banner.section-featured
  #carousel-example-generic.carousel.slide{"data-ride" => "carousel"}
    / Indicators
    %ol.carousel-indicators
      %li.active{"data-slide-to" => "0", "data-target" => "#carousel-example-generic"}
      %li{"data-slide-to" => "1", "data-target" => "#carousel-example-generic"}
      %li{"data-slide-to" => "2", "data-target" => "#carousel-example-generic"}
    / Wrapper for slides
    .carousel-inner
      .item.active
        .row.header-text
          .col-md-6.col-md-offset-3
            .text-center
              %i.fa.fa.fa-thumbs-up.fa-5x
              %h2.slogan
                Recovery Anytime is ....
              %p
                Whether you're sober, clean, or seeking help with your drug addiction or alcoholism, we welcome you, and will connect you with other people who share YOUR addiction, in YOUR local area, and all across the world!
      .item
        = image_tag '/assets/aspire4.jpg', alt: 'Aspire'
        / Static Header
        .hidden-xs
          .col-md-12.text-center
            %h2
              %span Aspire
            %br/
            %h3
              %span To say drug and alchohol free with the help of the comunity and your peers.
        / /header-text
      .item
        = image_tag '/assets/meeting.jpg', alt: '<eeting'
        / Static Header
        .hidden-xs
          .col-md-12.text-center
            %h2
              %span Meeting
            %br/
            %h3
              %span Online meeting will help you to get back into the comunity and stay drug free.
        / /header-text
    / Controls
    %a.right.carousel-control{"data-slide" => "prev", :href => "#carousel-example-generic"}
      %span.fa.fa-chevron-left
    %a.left.carousel-control{"data-slide" => "next", :href => "#carousel-example-generic"}
      %span.fa.fa-chevron-right
  / /carousel
