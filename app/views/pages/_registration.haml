= simple_form_for( user, :url => users_registrations_path, method: 'post') do |f|
  -#%ul
    - f.errors.full_messages.each do |e|
      %li=e
  = f.input :username, label: false, input_html: { class: 'string required form-control', placeholder: "Username" }
  %br
  = f.input :email,    label: false, input_html: { class: 'string required form-control', placeholder: "Email" }
  %br
  = f.input :password, label: false, input_html: { class: 'string required form-control', placeholder: "Password" }
  %br
  = f.button :submit, "Join", :class => 'btn btn-primary btn-block'
-#%form.form-quick-search{role: "form"}
  .form-group
    %label.sr-only{for: "qs-property-type"}
    %input#user_name.string.required.form-control{"aria-required" => "true", maxlength: "255", name: "user_name", placeholder: "User Name", size: "255", type: "text", value: ""}/
  .form-group
    %label.sr-only{for: "qs-operation"} Email Address
    %input#email.string.required.form-control{"aria-required" => "true", maxlength: "255", name: "email", placeholder: "Email", size: "255", type: "text", value: ""}/
  .form-group
    %label.sr-only{for: "qs-location"} Password
    %input#password.string.required.form-control{"aria-required" => "true", maxlength: "255", name: "password", placeholder: "Password", size: "255", type: "password", value: ""}/
  %button.btn.btn-default{type: "submit"}
    Join

